/* Global styles for the badminton scoring system application */

body {
    font-family: Arial, sans-serif;
    background-color: #f0f0f0;
    margin: 0;
    padding: 0;
}

.container {
    padding: 20px;
}

.button {
    background-color: #007aff;
    color: white;
    padding: 10px 15px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
}

.button:hover {
    background-color: #005bb5;
}

.score-display {
    font-size: 24px;
    font-weight: bold;
    margin: 10px 0;
}