page {
  background-color: #f4f4f4;
}

.container {
  padding: 0;
  min-height: 100vh;
}

/* Header Section (similar to game-signup) */
.header-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: left;
  color: white;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 8rpx;
}

.header-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* Login Prompt */
.login-prompt {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  padding: 40rpx;
  color: #666;
}

.login-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
}

.login-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 40rpx;
  text-align: center;
}

.login-button {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  padding: 20rpx 40rpx;
  border-radius: 25rpx;
  font-size: 30rpx;
  box-shadow: 0 8rpx 16rpx rgba(102, 126, 234, 0.3);
}

/* Content Section (similar to game-signup) */
.content-section {
  padding: 20rpx;
}

.game-list {
  max-height: calc(100vh - 200rpx);
}

/* Loading Section */
.loading-section {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60vh;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* Empty Container (similar to game-signup) */
.empty-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 60vh;
  color: #888;
  font-size: 28rpx;
}

.empty-container image {
  width: 120rpx;
  height: 120rpx;
  opacity: 0.5;
  margin-bottom: 24rpx;
}

.empty-state-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.empty-subtext {
  font-size: 24rpx;
  color: #ccc;
}

/* Game Card (styled like game-signup) */
.game-card {
  background-color: white;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  transition: all 0.2s ease;
}

.game-card-hover {
  background-color: #f9f9f9;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.12);
}

.game-card.user-participated {
  border-left: 4rpx solid #07C160;
}

.game-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.game-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.game-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
  color: white;
}

.game-status.completed {
  background-color: #07C160;
}

/* Game Info Rows */
.game-info-row {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.game-info-icon {
  width: 40rpx;
  height: 40rpx;
  background-color: #f0f0f0;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #666;
  margin-right: 10rpx;
}

.game-info-text {
  font-size: 26rpx;
  color: #333;
}

.game-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.participation-status {
  flex: 1;
}

.participated-text {
  font-size: 24rpx;
  color: #07C160;
  font-weight: 500;
}

.not-participated-text {
  font-size: 24rpx;
  color: #666;
}

.view-stats-arrow {
  font-size: 24rpx;
  color: #ccc;
  font-weight: bold;
}

/* Responsive design */
@media (max-width: 375px) {
  .header-section {
    padding: 30rpx 20rpx;
  }
  
  .game-card {
    padding: 20rpx;
    margin-bottom: 16rpx;
  }
  
  .game-title {
    font-size: 28rpx;
  }
  
  .game-info-text {
    font-size: 26rpx;
  }
  
  .header-subtitle {
    flex-direction: column;
    align-items: flex-start;
  }
  
  .last-updated {
    margin-left: 0;
    margin-top: 4rpx;
  }
}