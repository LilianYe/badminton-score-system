.container {
    padding: 0;
    background-color: #f4f4f4;
    min-height: 100vh;
}

/* Profile Section */
.profile-section {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    padding: 40rpx 30rpx;
    display: flex;
    align-items: center;
    color: white;
}

.avatar-container {
    margin-right: 30rpx;
}

.avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 60rpx;
    border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.user-info {
    flex: 1;
}

.nickname {
    font-size: 36rpx;
    font-weight: bold;
    color: white;
}

/* Title Section */
.title-section {
    background-color: white;
    padding: 30rpx;
    border-bottom: 1rpx solid #eee;
}

.title {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
}

/* Tab Navigation */
.tab-navigation {
    background-color: white;
    display: flex;
    border-bottom: 1rpx solid #eee;
}

.tab-item {
    flex: 1;
    padding: 30rpx;
    text-align: center;
    font-size: 28rpx;
    color: #666;
    position: relative;
    transition: all 0.3s ease;
}

.tab-item.active {
    color: #007AFF;
    font-weight: bold;
}

.tab-item.active::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 60rpx;
    height: 6rpx;
    background-color: #007AFF;
    border-radius: 3rpx;
}

/* Content Section */
.content-section {
    padding: 20rpx;
}

.loading-container,
.empty-container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 60vh;
    color: #888;
    font-size: 28rpx;
}

.match-list {
    width: 100%;
}

.match-card {
    background-color: #fff;
    border-radius: 16rpx;
    padding: 24rpx;
    margin-bottom: 24rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.match-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20rpx;
}

.match-time {
    font-size: 24rpx;
    color: #888;
}

.match-status {
    padding: 6rpx 16rpx;
    border-radius: 20rpx;
    font-size: 24rpx;
    color: #fff;
    background-color: #ff9800;
    font-weight: bold;
}

.result-badge {
    padding: 6rpx 16rpx;
    border-radius: 20rpx;
    font-size: 24rpx;
    color: #fff;
    font-weight: bold;
}

.result-badge.Win {
    background-color: #4caf50;
}

.result-badge.Loss {
    background-color: #f44336;
}

.result-badge.Draw {
    background-color: #ff9800;
}

.result-badge.Referee {
    background-color: #607d8b;
}

.teams-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 0;
    border-top: 1rpx solid #eee;
    border-bottom: 1rpx solid #eee;
}

.team {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 1;
}

.player-name {
    font-size: 28rpx;
    color: #333;
    margin-bottom: 8rpx;
}

.score {
    font-size: 48rpx;
    font-weight: bold;
    color: #333;
    margin: 0 20rpx;
}

.match-footer {
    margin-top: 20rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 24rpx;
    color: #888;
}

.edit-btn {
    background-color: #007AFF;
    color: white;
    border: none;
    padding: 12rpx 24rpx;
    border-radius: 20rpx;
    font-size: 24rpx;
    margin: 0;
} 