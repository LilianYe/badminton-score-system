.container {
    padding: 0;
    background-color: #f4f4f4;
    min-height: 100vh;
}

/* Profile Section */
.profile-section {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    padding: 40rpx 30rpx;
    display: flex;
    align-items: center;
    color: white;
}

.avatar-container {
    margin-right: 30rpx;
}

.avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 60rpx;
    border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.user-info {
    flex: 1;
}

.nickname {
    font-size: 36rpx;
    font-weight: bold;
    color: white;
}

/* Title Section */
.title-section {
    background-color: white;
    padding: 30rpx;
    border-bottom: 1rpx solid #eee;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.title {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
}

/* Tab Navigation */
.tab-navigation {
    background-color: white;
    display: flex;
    border-bottom: 1rpx solid #eee;
}

.tab-item {
    flex: 1;
    padding: 30rpx;
    text-align: center;
    font-size: 28rpx;
    color: #666;
    position: relative;
    transition: all 0.3s ease;
}

.tab-item.active {
    color: #007AFF;
    font-weight: bold;
}

.tab-item.active::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 60rpx;
    height: 6rpx;
    background-color: #007AFF;
    border-radius: 3rpx;
}

/* Content Section */
.content-section {
    padding: 20rpx;
}

.loading-container,
.empty-container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 60vh;
    color: #888;
    font-size: 28rpx;
}

.match-list {
    width: 100%;
}

.match-card {
    background-color: #fff;
    border-radius: 16rpx;
    padding: 24rpx;
    margin-bottom: 24rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.match-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20rpx;
}

.match-time {
    font-size: 24rpx;
    color: #888;
}

.match-status {
    padding: 6rpx 16rpx;
    border-radius: 20rpx;
    font-size: 24rpx;
    color: #fff;
    background-color: #ff9800;
    font-weight: bold;
}

.result-badge {
    padding: 6rpx 16rpx;
    border-radius: 20rpx;
    font-size: 24rpx;
    color: #fff;
    font-weight: bold;
}

.result-badge.Win {
    background-color: #4caf50;
}

.result-badge.Loss {
    background-color: #f44336;
}

.result-badge.Draw {
    background-color: #ff9800;
}

.result-badge.Referee {
    background-color: #607d8b;
}

.teams-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 0;
    border-top: 1rpx solid #eee;
    border-bottom: 1rpx solid #eee;
}

.team {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 1;
}

.player-name {
    font-size: 28rpx;
    color: #333;
    margin-bottom: 8rpx;
}

.score {
    font-size: 48rpx;
    font-weight: bold;
    color: #333;
    margin: 0 20rpx;
}

.match-footer {
    margin-top: 20rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 24rpx;
    color: #888;
}

.edit-btn {
    background-color: #007AFF;
    color: white;
    border: none;
    padding: 12rpx 24rpx;
    border-radius: 20rpx;
    font-size: 24rpx;
    margin: 0;
}

/* Score Input Modal Styles */
.score-input-modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1000;
    display: flex;
    justify-content: center;
    align-items: center;
}

.score-input-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
}

.score-input-container {
    background: white;
    border-radius: 20rpx;
    padding: 40rpx;
    width: 80%;
    max-width: 600rpx;
    position: relative;
    z-index: 1001;
    box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
}

.score-input-header {
    text-align: center;
    margin-bottom: 40rpx;
}

.score-input-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
}

.score-input-content {
    margin-bottom: 40rpx;
}

.score-input-row {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 20rpx;
}

.score-input-box {
    width: 120rpx;
    height: 80rpx;
    border: 2rpx solid #ddd;
    border-radius: 12rpx;
    text-align: center;
    font-size: 28rpx;
    font-weight: bold;
    color: #333;
    background-color: #f8f9fa;
}

.score-input-box:focus {
    border-color: #007AFF;
    background-color: white;
}

.score-input-separator {
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
    margin: 0 10rpx;
}

.score-input-actions {
    display: flex;
    gap: 20rpx;
}

.score-input-btn {
    flex: 1;
    height: 80rpx;
    border-radius: 12rpx;
    font-size: 28rpx;
    font-weight: bold;
    border: none;
}

.cancel-btn {
    background-color: #f8f9fa;
    color: #666;
}

.confirm-btn {
    background-color: #007AFF;
    color: white;
}

.stats-section {
    background: #fff;
    border-radius: 20rpx;
    margin: 30rpx 0 0 0;
    padding: 32rpx 24rpx 16rpx 24rpx;
    box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.06);
}

.stats-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 16rpx;
}

.stats-title {
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
}

.stats-more-btn {
    background: #f4f4f4;
    color: #007AFF;
    border-radius: 16rpx;
    font-size: 24rpx;
    padding: 8rpx 24rpx;
    border: none;
}

.stats-main {
    width: 100%;
}

.stats-row {
    display: flex;
    align-items: center;
    margin-bottom: 12rpx;
    gap: 24rpx;
}

.elo-item {
    min-width: 110rpx;
    flex: 1.2;
    align-items: center;
}

.elo-row {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    margin-bottom: 16rpx;
}

.stats-elo-value {
    font-size: 56rpx;
    font-weight: bold;
    color: #FF9800;
    margin-top: 2rpx;
}

.stats-label {
    font-size: 22rpx;
    color: #888;
    margin-bottom: 4rpx;
}

.stats-value {
    font-size: 28rpx;
    font-weight: bold;
    color: #333;
}

.stats-more {
    margin-top: 12rpx;
    background: #f8f9fa;
    border-radius: 12rpx;
    padding: 16rpx 0 8rpx 0;
}

.stats-subtitle {
    font-size: 24rpx;
    color: #888;
    font-weight: bold;
    margin: 8rpx 0 0 8rpx;
}

.stats-toggle-icon {
    font-size: 28rpx;
    color: #888;
    margin-left: 16rpx;
    user-select: none;
}

.stats-cards {
    display: flex;
    flex-direction: column;
    gap: 20rpx;
    margin-top: 20rpx;
}

.stats-card {
    background: #f8f9fa;
    border-radius: 16rpx;
    box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
    padding: 20rpx 16rpx 12rpx 16rpx;
}

.stats-card-title {
    font-size: 26rpx;
    font-weight: bold;
    color: #555;
    margin-bottom: 10rpx;
}

.stats-card-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 12rpx;
}

.stats-card-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-width: 70rpx;
    flex: 1;
}

.same-gender-card {
    border-left: 6rpx solid #4caf50;
}

.mixed-card {
    border-left: 6rpx solid #ff9800;
}

.main-stats-card {
    border-left: 6rpx solid #007AFF;
}

.gender-icon {
    width: 32rpx;
    height: 32rpx;
    vertical-align: middle;
    margin-left: 8rpx;
} 