.container {
  padding: 20rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.15);
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
}

.loading-container,
.empty-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60vh;
  color: #888;
  font-size: 28rpx;
}

.player-list {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.list-header {
  display: flex;
  padding: 30rpx 20rpx;
  background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
  font-weight: bold;
  font-size: 28rpx;
  color: #495057;
  border-bottom: 2rpx solid #dee2e6;
}

.player-item {
  display: flex;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #f1f3f4;
  align-items: center;
  font-size: 28rpx;
  transition: all 0.2s ease;
}

.player-item:last-child {
  border-bottom: none;
}

.player-item:active {
  background-color: #f8f9fa;
  transform: scale(0.98);
}

.rank {
  width: 60rpx;
  text-align: center;
  font-weight: bold;
  color: #6c757d;
  font-size: 24rpx;
}

.player {
  flex: 1;
  min-width: 70rpx;
  padding-right: 6rpx;
  font-weight: 600;
  color: #212529;
}

.player-info {
  flex: 1;
  min-width: 70rpx;
  padding-right: 6rpx;
  display: flex;
  align-items: center;
}

.elo {
  width: 80rpx;
  text-align: center;
  font-weight: bold;
  color: #212529;
  font-size: 26rpx;
}

.games {
  width: 90rpx;
  text-align: center;
  color: #6c757d;
  font-weight: 500;
}

.wins {
  width: 50rpx;
  text-align: center;
  color: #495057;
  font-weight: 500;
}

.winrate {
  width: 80rpx;
  text-align: center;
  font-weight: bold;
  color: #495057;
  font-size: 26rpx;
}

/* Top 3 players special styling */
.player-item:nth-of-type(2) {
  background: linear-gradient(135deg, #fff8e1 0%, #ffecb3 100%);
  border-left: 6rpx solid #ffd700;
}

.player-item:nth-of-type(2) .rank {
  color: #ffd700;
  font-size: 28rpx;
}

.player-item:nth-of-type(2) .player {
  color: #b8860b;
  font-weight: bold;
}

.player-item:nth-of-type(2) .elo {
  color: #b8860b;
}

.player-item:nth-of-type(3) {
  background: linear-gradient(135deg, #f5f5f5 0%, #e0e0e0 100%);
  border-left: 6rpx solid #c0c0c0;
}

.player-item:nth-of-type(3) .rank {
  color: #c0c0c0;
  font-size: 26rpx;
}

.player-item:nth-of-type(3) .player {
  color: #696969;
  font-weight: bold;
}

.player-item:nth-of-type(3) .elo {
  color: #696969;
}

.player-item:nth-of-type(4) {
  background: linear-gradient(135deg, #f4e4d6 0%, #e6c8a8 100%);
  border-left: 6rpx solid #cd7f32;
}

.player-item:nth-of-type(4) .rank {
  color: #cd7f32;
  font-size: 26rpx;
}

.player-item:nth-of-type(4) .player {
  color: #8b4513;
  font-weight: bold;
}

.player-item:nth-of-type(4) .elo {
  color: #8b4513;
}

.empty-state {
  padding: 40px 0;
  text-align: center;
  color: #999;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 200px;
}

.empty-action {
  margin-top: 20px;
}

.filter-note {
  padding: 20rpx;
  text-align: center;
  font-size: 24rpx;
  color: #6c757d;
}

.actions {
  margin-top: 30px;
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.home-button {
  margin-top: 10px;
}

/* Add this style for female players */
.female-player {
  background-color: rgba(255, 192, 203, 0.1); /* Very light pink background */
  border-left: 3px solid #ff69b4; /* Hot pink border */
}

.gender-icon-small {
  width: 16rpx;
  height: 16rpx;
  margin-right: 8rpx;
  vertical-align: middle;
}