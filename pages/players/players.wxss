.container {
  padding: 20px;
  height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 15px;
  border-bottom: 1px solid #eee;
  margin-bottom: 15px;
}

.title {
  font-size: 20px;
  font-weight: bold;
}

.player-list {
  width: 100%;
  flex: 1;
  overflow-y: auto;
}

.list-header, .player-item {
  display: flex;
  padding: 12px 0;
  border-bottom: 1px solid #eee;
}

.list-header {
  font-weight: bold;
  background: #f8f8f8;
  position: sticky;
  top: 0;
  padding: 12px 5px;
}

.player-item {
  display: flex;
  padding: 12px 5px;
  transition: background-color 0.2s;
  border-bottom: 1px solid #eee;
  border-left: 3px solid transparent; /* Added for consistency with female-player */
}

.player-item:active {
  background-color: #f0f0f0;
}

.rank {
  width: 50px;
  text-align: center;
}

.name {
  flex: 1;
}

.stats {
  width: 60px;
  text-align: center;
}

.rating {
  width: 70px;
  text-align: right;
  font-weight: bold;
}

.empty-state {
  padding: 40px 0;
  text-align: center;
  color: #999;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 200px;
}

.empty-action {
  margin-top: 20px;
}

.actions {
  margin-top: 30px;
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.home-button {
  margin-top: 10px;
}

/* Add this style for female players */
.female-player {
  background-color: rgba(255, 192, 203, 0.1); /* Very light pink background */
  border-left: 3px solid #ff69b4; /* Hot pink border */
}