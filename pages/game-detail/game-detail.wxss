/* Game Detail Page Styles */
.container {
  padding: 30rpx;
  min-height: 100vh;
  box-sizing: border-box;
  background-color: #f8f8f8;
  display: flex;
  flex-direction: column;
}

/* Game Card Styles */
.game-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  padding: 30rpx;
  margin-bottom: 30rpx;
  position: relative;
}

.status-badge {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  font-size: 24rpx;
  color: white;
  background-color: #007AFF;
  padding: 4rpx 16rpx;
  border-radius: 12rpx;
}

.game-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.game-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.game-icon {
  width: 60rpx;
  height: 60rpx;
}

.game-icon image {
  width: 100%;
  height: 100%;
}

/* Info Row Styles */
.info-row {
  display: flex;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f9f9f9;
}

.info-icon {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  background-color: #f0f0f0;
  border-radius: 50%;
}

.cuIcon {
  font-size: 28rpx;
  color: #666;
}

.info-content {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  line-height: 48rpx;
  margin-right: 20rpx;
}

.info-action {
  font-size: 28rpx;
  color: #007AFF;
}

/* Section Styles */
.section {
  margin-bottom: 30rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.section-action {
  font-size: 28rpx;
  color: #007AFF;
  font-weight: bold;
}

/* Player Grid Styles */
.player-grid {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.player-item {
  width: calc(25% - 20rpx);
  margin: 10rpx;
  padding: 20rpx 10rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  text-align: center;
  position: relative;
}

.female-indicator {
  background-color: #FFEBF5;
}

.player-avatar {
  width: 80rpx;
  height: 80rpx;
  margin: 0 auto 10rpx;
  border-radius: 50%;
  overflow: hidden;
  background-color: #eee;
}

.player-avatar image {
  width: 100%;
  height: 100%;
}

.player-name {
  font-size: 24rpx;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  padding: 0 10rpx;
}

.player-remove {
  position: absolute;
  top: 5rpx;
  right: 5rpx;
  width: 36rpx;
  height: 36rpx;
  line-height: 32rpx;
  text-align: center;
  background-color: rgba(0, 0, 0, 0.2);
  color: white;
  font-size: 28rpx;
  border-radius: 50%;
}

/* Add Player Button */
.add-player {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed #ddd;
  background-color: transparent;
}

.add-icon {
  font-size: 48rpx;
  color: #999;
  font-weight: 100;
  line-height: 48rpx;
}

.add-text {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* Modal Styles */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  padding: 30rpx;
  box-sizing: border-box;
}

.modal-header {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
  color: #333;
}

.modal-body {
  margin-bottom: 30rpx;
}

.modal-body input, .modal-body textarea {
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 16rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

.modal-body textarea {
  height: 160rpx;
}

.gender-selector {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.gender-selector text {
  margin-right: 20rpx;
  font-size: 28rpx;
}

.gender-selector radio-group {
  display: flex;
}

.gender-selector label {
  margin-right: 20rpx;
  font-size: 28rpx;
}

.modal-actions {
  display: flex;
  justify-content: space-between;
}

.modal-actions button {
  flex: 1;
  margin: 0 10rpx;
  font-size: 30rpx;
}

/* Game Modal */
.game-modal {
  max-height: 80vh;
  overflow: hidden;
}

.picker {
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 16rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}

.placeholder {
  color: #999;
}

/* Empty State */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 30rpx;
  text-align: center;
}

.empty-state image {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-state-text {
  font-size: 32rpx;
  color: #999;
  line-height: 1.6;
}

/* Action Buttons */
.action-buttons {
  margin-top: auto;
  padding: 30rpx 0;
  display: flex;
  justify-content: space-between;
}

.action-button {
  flex: 1;
  margin: 0 10rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
}

.share {
  background-color: #f0f0f0;
  color: #666;
}

.primary {
  background-color: #007AFF;
  color: white;
}

.isNavigating {
  opacity: 0.7;
}

/* Owner info styles */
.owner-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx dashed #f0f0f0;
}

.owner-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.owner-name {
  font-size: 24rpx;
  color: #666;
  flex: 1;
}

.owner-actions {
  display: flex;
  gap: 16rpx;
}

.edit-button {
  font-size: 24rpx;
  color: #007AFF;
  padding: 8rpx 16rpx;
  border: 1rpx solid #007AFF;
  border-radius: 8rpx;
}

.delete-button {
  font-size: 24rpx;
  color: #E64340;
  padding: 8rpx 16rpx;
  border: 1rpx solid #E64340;
  border-radius: 8rpx;
}

/* Edit form styles */
.edit-form {
  margin-top: 20rpx;
}

.form-group {
  margin-bottom: 20rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.form-input {
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 16rpx;
  width: 100%;
  box-sizing: border-box;
  font-size: 28rpx;
}

.form-picker {
  background-color: #f8f8f8;
  border-radius: 8rpx;
  padding: 16rpx;
  width: 100%;
  box-sizing: border-box;
  font-size: 28rpx;
}

.button-group {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}

.save-button, .cancel-button {
  flex: 1;
  margin: 0 10rpx;
  font-size: 28rpx;
  padding: 16rpx 0;
  text-align: center;
  border-radius: 8rpx;
}

.save-button {
  background-color: #007AFF;
  color: white;
}

.cancel-button {
  background-color: #f0f0f0;
  color: #666;
}
