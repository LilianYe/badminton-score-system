/* Game Detail Page Styles */
page {
  background-color: #f4f4f4;
}

.container {
  padding: 0;
  min-height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

/* Header Section */
.header-section {
  position: relative;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 30rpx;  /* Removed extra left padding since we're removing the return button */
  display: flex;
  justify-content: space-between;
  align-items: center; /* Center align items vertically */
  color: white;
}

.header-content {
  flex: 1;
}

.header-main {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.header-title {
  font-size: 34rpx;
  font-weight: bold;
  color: white;
  margin-right: 16rpx; /* Add margin to separate from status badge */
}

/* Status Badge */
.status-badge {
  font-size: 22rpx;
  color: white;
  background-color: rgba(255, 255, 255, 0.2);
  padding: 4rpx 14rpx;
  border-radius: 10rpx;
  display: inline-block;
  vertical-align: middle;
}

.header-actions {
  display: flex;
  align-items: center;
}

.header-action {
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 30rpx;
  padding: 8rpx 16rpx;
  margin-left: 14rpx;
  font-size: 22rpx;
  color: white;
}

.header-action.delete {
  background-color: rgba(255, 0, 0, 0.3);
}

/* Content Section */
.content-section {
  padding: 20rpx;
}

/* Card Styles */
.card {
  background-color: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  padding: 24rpx;
  margin-bottom: 20rpx;
}

/* Game Info Card */
.game-info-card {
  margin-bottom: 30rpx;
}

/* Section Header */
.section-header {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* Owner Info */
.owner-info {
  display: flex;
  align-items: center;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.owner-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin-right: 16rpx;
}

.owner-name {
  font-size: 28rpx;
  color: #666;
}

/* Info Row Styles */
.info-row {
  display: flex;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f9f9f9;
}

.info-icon {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  background-color: #f0f0f0;
  border-radius: 50%;
}

.cuIcon {
  font-size: 28rpx;
  color: #666;
}

.info-content {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  line-height: 48rpx;
}

/* Status Badge */
.status-badge {
  font-size: 24rpx;
  color: white;
  background-color: #007AFF;
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  display: inline-block;
}

/* Form Styles for Edit Mode */
.edit-card {
  padding: 30rpx;
}

.form-group {
  margin-bottom: 24rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.form-input, .form-picker {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 80rpx;
}

.button-row {
  display: flex;
  margin-top: 30rpx;
}

.button-row button {
  flex: 1;
  margin: 0 10rpx;
  border-radius: 8rpx;
}

.cancel-button {
  background-color: #f5f5f5;
  color: #666;
}

.save-button {
  background-color: #007AFF;
  color: white;
}

/* Player Grid Styles */
.player-grid {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.player-item {
  width: calc(25% - 20rpx);
  margin: 10rpx;
  padding: 20rpx 10rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  text-align: center;
  position: relative;
}

.female-indicator {
  background-color: #FFEBF5;
}

.player-avatar {
  width: 80rpx;
  height: 80rpx;
  margin: 0 auto 10rpx;
  border-radius: 50%;
  overflow: hidden;
  background-color: #eee;
}

.player-avatar image {
  width: 100%;
  height: 100%;
}

.player-name {
  font-size: 24rpx;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  padding: 0 10rpx;
}

.player-remove {
  position: absolute;
  top: 5rpx;
  right: 5rpx;
  width: 36rpx;
  height: 36rpx;
  line-height: 32rpx;
  text-align: center;
  background-color: rgba(0, 0, 0, 0.2);
  color: white;
  font-size: 28rpx;
  border-radius: 50%;
}

/* Add Player Button */
.add-player {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 2rpx dashed #ddd;
  background-color: transparent;
}

.add-icon {
  font-size: 48rpx;
  color: #999;
  font-weight: 100;
  line-height: 48rpx;
}

.add-text {
  font-size: 24rpx;
  color: #999;
}

/* Action Button Styles */
.action-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  padding: 0 20rpx;
  gap: 20rpx; /* Add gap between buttons */
}

.action-button {
  flex: 1; /* Make buttons take equal width */
  margin: 0;
  padding: 22rpx 0;
  text-align: center;
  border-radius: 10rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #fff;
  border: none;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
}

/* Add style for return button */
.action-button.return {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

/* Keep existing button styles */
.action-button.primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.action-button.view-existing {
  background: linear-gradient(135deg, #42b983 0%, #38a169 100%);
}

.action-button.disabled {
  background: linear-gradient(135deg, #cccccc 0%, #bbbbbb 100%);
  color: #ffffff;
  opacity: 0.7;
  box-shadow: none;
}

.action-button.isNavigating {
  opacity: 0.8;
}

/* Add hover effect */
.action-button:active:not(.disabled) {
  transform: translateY(2rpx);
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.1);
}

/* Button hover effect */
.button-hover {
  opacity: 0.8;
  transform: translateY(2rpx);
}

/* Empty State */
.empty-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 60vh;
  padding: 30rpx;
}

.empty-container image {
  width: 120rpx;
  height: 120rpx;
  opacity: 0.5;
  margin-bottom: 24rpx;
}

.empty-container text {
  font-size: 28rpx;
  color: #999;
}
