page {
  background-color: #f4f4f4;
}

.container {
  padding: 0;
  min-height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

/* Header Section */
.header-section {
  position: relative;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: white;
}

.header-content {
  flex: 1;
}

.header-main {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.header-title {
  font-size: 34rpx;
  font-weight: bold;
  color: white;
  margin-right: 16rpx;
}

/* Content Section */
.content-section {
  padding: 20rpx;
}

/* Card Styles */
.card {
  background-color: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.section {
  margin-bottom: 20rpx;
}

.section-header {
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

textarea, input {
  width: 100%;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  padding: 12rpx;
  margin-top: 8rpx;
  font-size: 32rpx;
  background-color: #ffffff;
}

.button-row {
  display: flex;
  margin-top: 24rpx;
  gap: 20rpx;
}

.back-button {
  flex: 1;
  background-color: #f0f0f0;
  color: #333;
  border-radius: 8rpx;
}

.generate-button {
  flex: 2;
  background-color: #1aad19;
  color: white;
  border-radius: 8rpx;
}

.result-section {
  margin-top: 20rpx;
}

.loading-section {
  margin-top: 32rpx;
  text-align: center;
  color: #007AFF;
}

/* Match results styles */
.match-round {
  background-color: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.round-header {
  font-weight: bold;
  font-size: 30rpx;
  color: #333;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 16rpx;
}

.match-court {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f9f9f9;
}

.court-number {
  flex: 0 0 80rpx;
  font-weight: bold;
  color: #666;
}

.team {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.team-players {
  display: flex;
  flex-direction: column;
}

.player {
  font-size: 28rpx;
  padding: 4rpx 0;
  color: #333;
}

.versus {
  flex: 0 0 60rpx;
  text-align: center;
  font-weight: bold;
  color: #999;
}

.female-player {
  color: #ff4f9c;
}

/* Rest players section */
.rest-players {
  margin-top: 12rpx;
  padding: 12rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  font-size: 26rpx;
}

.rest-player {
  display: inline-block;
  margin-right: 16rpx;
  margin-bottom: 8rpx;
  background-color: #eeeeee;
  padding: 6rpx 12rpx;
  border-radius: 4rpx;
  color: #555;
}

/* Toolbar styles */
.toolbar {
  display: flex;
  margin-top: 20rpx;
  justify-content: space-between;
}

.toolbar-button {
  flex: 1;
  margin: 0 8rpx;
  font-size: 28rpx;
  padding: 12rpx 0;
  border-radius: 8rpx;
  text-align: center;
}

.toolbar-button.primary {
  background-color: #1aad19;
  color: #ffffff;
  font-weight: bold;
}

/* Styling for disabled buttons */
.toolbar-button[disabled] {
  background-color: #e0e0e0;
  color: #888;
}

/* Show saved status visually on the match rounds */
.match-rounds-saved {
  position: relative;
}

.match-rounds-saved::before {
  content: "已保存";
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  background-color: #1aad19; 
  color: white;
  padding: 5rpx 10rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  z-index: 2;
}

/* Player list styles */
.player-list-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.player-list-title {
  font-weight: bold;
  font-size: 30rpx;
  color: #333;
}

.edit-button {
  color: #007AFF;
  font-size: 28rpx;
  padding: 4rpx 12rpx;
  background-color: rgba(0, 122, 255, 0.1);
  border-radius: 8rpx;
}

.player-chips {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.player-chip {
  background-color: #f0f0f0;
  border-radius: 30rpx;
  padding: 8rpx 20rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  position: relative;
  color: #333;
}

.player-chip.female {
  background-color: #ffecf5;
  color: #ff4f9c;
}

.remove-player {
  margin-left: 10rpx;
  font-weight: bold;
  height: 32rpx;
  width: 32rpx;
  text-align: center;
  line-height: 32rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, 0.1);
}

/* Parameters section */
.parameters-section {
  background-color: white;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.parameter-group {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
  gap: 20rpx;
}

.parameter {
  flex: 1;
  min-width: 300rpx;
}

.parameter-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

/* Advanced settings toggle */
.toggle-advanced {
  text-align: center;
  padding: 12rpx;
  color: #007AFF;
  font-size: 28rpx;
  background-color: rgba(0, 122, 255, 0.05);
  border-radius: 8rpx;
  margin-top: 10rpx;
}

.advanced-settings {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s;
}

.advanced-settings.show {
  max-height: 800rpx; /* Increased to accommodate all content */
}

/* Status badges - unified with other pages */
.status-badge {
  font-size: 24rpx;
  color: white;
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  display: inline-block;
}

.status-badge.active {
  background-color: #007AFF;
}

.status-badge.matched {
  background-color: #FFA500; /* Orange */
}

.status-badge.playing {
  background-color: #FF3B30; /* Red */
}

.status-badge.completed {
  background-color: #4CD964; /* Green */
}

/* Switch styles to match other components */
switch {
  transform: scale(0.8);
  margin-left: -8rpx;
}

/* Help icon style */
.help-icon {
  display: inline-block;
  width: 18px;
  height: 18px;
  line-height: 18px;
  text-align: center;
  border-radius: 50%;
  background-color: #0078d7;
  color: white;
  font-size: 12px;
  margin-left: 5px;
}
