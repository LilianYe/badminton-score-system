.container {
  padding: 20px;
  height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #f6f6f6;
}

.login-card {
  width: 100%;
  background-color: #fff;
  border-radius: 12px;
  padding: 30px 20px;
  box-shadow: 0 4px 10px rgba(0,0,0,0.1);
  max-width: 500px;
}

.app-title {
  font-size: 22px;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30px;
  color: #007AFF;
}

.welcome-text {
  font-size: 16px;
  text-align: center;
  margin-bottom: 25px;
  color: #333;
}

.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30px;
}

.avatar {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  margin-bottom: 10px;
  border: 3px solid #007AFF;
}

.nickname {
  font-size: 18px;
  font-weight: bold;
  color: #333;
}

.login-section {
  margin-bottom: 20px;
}

.wechat-login-btn {
  width: 100%;
  height: 50px;
  background-color: #07C160 !important;
  border-color: #07C160 !important;
  color: #fff !important;
  font-size: 16px;
  font-weight: bold;
  border-radius: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
}

.wechat-login-btn::after {
  border: none;
}

.wechat-icon {
  font-size: 20px;
  margin-right: 4px;
}

.form-group {
  margin-bottom: 24px;
}

.label {
  display: block;
  margin-bottom: 8px;
  font-size: 15px;
  color: #333;
}

.input {
  width: 100%;
  height: 44px;
  border: 1px solid #ddd;
  border-radius: 8px;
  padding: 0 12px;
  font-size: 16px;
  background-color: #f8f8f8;
}

.input:focus {
  border-color: #007AFF;
  background-color: #fff;
}

.login-btn {
  width: 100%;
  height: 44px;
  margin: 10px 0 20px 0;
}

.note {
  font-size: 13px;
  color: #666;
  text-align: center;
  line-height: 1.4;
}

.test-login-btn {
  width: 100%;
  height: 44px;
  margin-top: 10px;
  background-color: #f0f0f0 !important;
  border-color: #ddd !important;
  color: #666 !important;
  font-size: 14px;
  border-radius: 8px;
}

.test-login-btn::after {
  border: none;
}

.test-scenarios-btn {
  width: 100%;
  height: 36px;
  margin-top: 8px;
  background-color: #5856D6 !important;
  border-color: #5856D6 !important;
  color: #fff !important;
  font-size: 12px;
  border-radius: 6px;
}

.test-scenarios-btn::after {
  border: none;
}

.dev-note {
  display: block;
  margin-top: 10px;
  font-size: 12px;
  color: #007AFF;
  font-weight: bold;
}

.subtitle {
  font-size: 14px;
  text-align: center;
  margin-bottom: 25px;
  color: #666;
}

.nickname-options {
  margin-bottom: 30px;
}

.option-card {
  background-color: #f8f9fa;
  border: 2px solid #e9ecef;
  border-radius: 8px;
  padding: 16px;
  margin-bottom: 12px;
  transition: all 0.2s;
}

.option-card.selected {
  border-color: #007AFF;
  background-color: #f0f8ff;
}

.option-header {
  display: flex;
  align-items: center;
  margin-bottom: 8px;
}

.radio-btn {
  width: 20px;
  height: 20px;
  border: 2px solid #ddd;
  border-radius: 50%;
  margin-right: 12px;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s;
}

.radio-btn.selected {
  border-color: #007AFF;
}

.radio-inner {
  width: 10px;
  height: 10px;
  background-color: #007AFF;
  border-radius: 50%;
}

.option-title {
  font-size: 16px;
  font-weight: 500;
  color: #333;
}

.option-value {
  font-size: 14px;
  color: #666;
  margin-left: 32px;
}

.custom-nickname-input {
  width: 100%;
  height: 40px;
  border: 1px solid #ddd;
  border-radius: 6px;
  padding: 0 12px;
  font-size: 14px;
  background-color: #fff;
  margin-top: 8px;
  margin-left: 32px;
  box-sizing: border-box;
}

.custom-nickname-input:focus {
  border-color: #007AFF;
  outline: none;
}

.config-actions {
  margin-bottom: 20px;
}

.continue-btn {
  width: 100%;
  height: 50px;
  background-color: #007AFF !important;
  border-color: #007AFF !important;
  color: #fff !important;
  font-size: 16px;
  font-weight: bold;
  border-radius: 8px;
}

.continue-btn::after {
  border: none;
}

.availability-indicator {
  margin-top: 8px;
  margin-left: 32px;
  font-size: 12px;
}

.checking {
  color: #666;
}

.checking-text {
  font-style: italic;
}

.available {
  color: #28a745;
}

.available-text {
  font-weight: 500;
}

.unavailable {
  color: #dc3545;
}

.unavailable-text {
  font-weight: 500;
}

.gender-options {
  margin-bottom: 30px;
}

.gender-card {
  background-color: #f8f9fa;
  border: 2px solid #e9ecef;
  border-radius: 8px;
  padding: 16px;
  transition: all 0.2s;
}

.gender-card:focus-within {
  border-color: #007AFF;
  background-color: #f0f8ff;
}

.gender-title {
  font-size: 16px;
  font-weight: 500;
  color: #333;
  margin-bottom: 12px;
  display: block;
}

.gender-selector {
  width: 100%;
}

.gender-picker {
  height: 44px;
  border: 1px solid #ddd;
  border-radius: 6px;
  padding: 0 12px;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: border-color 0.2s;
}

.gender-picker:focus-within {
  border-color: #007AFF;
}

.gender-text {
  font-size: 16px;
  color: #333;
}

.picker-arrow {
  width: 0;
  height: 0;
  border-left: 6px solid transparent;
  border-right: 6px solid transparent;
  border-top: 6px solid #666;
}

.nickname-section {
  margin-bottom: 30px;
}

.nickname-label {
  font-size: 16px;
  font-weight: 500;
  color: #333;
  margin-bottom: 12px;
  display: block;
}

.nickname-input {
  width: 100%;
  height: 44px;
  border: 1px solid #ddd;
  border-radius: 6px;
  padding: 0 12px;
  font-size: 16px;
  background-color: #fff;
  box-sizing: border-box;
  transition: border-color 0.2s;
}

.nickname-input:focus {
  border-color: #007AFF;
  outline: none;
}