.container {
  padding: 20px;
  height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #f6f6f6;
}

.login-card {
  width: 100%;
  background-color: #fff;
  border-radius: 12px;
  padding: 30px 20px;
  box-shadow: 0 4px 10px rgba(0,0,0,0.1);
  max-width: 500px;
}

.app-title {
  font-size: 22px;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30px;
  color: #007AFF;
}

.welcome-text {
  font-size: 16px;
  text-align: center;
  margin-bottom: 25px;
  color: #333;
}

.form-group {
  margin-bottom: 24px;
}

.label {
  display: block;
  margin-bottom: 8px;
  font-size: 15px;
  color: #333;
}

.input {
  width: 100%;
  height: 44px;
  border: 1px solid #ddd;
  border-radius: 8px;
  padding: 0 12px;
  font-size: 16px;
  background-color: #f8f8f8;
}

.input:focus {
  border-color: #007AFF;
  background-color: #fff;
}

.login-btn {
  width: 100%;
  height: 44px;
  margin: 10px 0 20px 0;
}

.note {
  font-size: 13px;
  color: #666;
  text-align: center;
}