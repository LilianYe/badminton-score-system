  width: 100%;
  height: 36px;
  margin-top: 8px;
  background-color: #5856D6 !important;
  border-color: #5856D6 !important;
  color: #fff !important;
  font-size: 12px;
  border-radius: 6px;
}

.test-scenarios-btn::after {
  border: none;
}