/* Styles for the new game page */
.container {
    padding: 20px;
    box-sizing: border-box;
    height: 100vh;
    background-color: #f6f6f6;
}

.title {
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 20px;
}

.card {
  background-color: #fff;
  border-radius: 8px;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
  padding: 20px;
}

.card-title {
  font-size: 18px;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20px;
  color: #333;
  border-bottom: 1px solid #eee;
  padding-bottom: 10px;
}

.warning-box {
  padding: 20px;
  background-color: #fff9e6;
  border: 1px solid #ffeeba;
  border-radius: 4px;
  margin-bottom: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 15px;
  text-align: center;
}

.warning-text {
  color: #856404;
  font-size: 16px;
  font-weight: 500;
}

.warning-subtext {
  color: #856404;
  font-size: 14px;
}

.team-section {
  margin-bottom: 20px;
  border: 1px solid #eee;
  border-radius: 6px;
  padding: 15px;
}

.team-header {
  margin-bottom: 15px;
  padding-bottom: 8px;
  border-bottom: 1px dashed #eee;
}

.team-title {
  font-weight: bold;
  font-size: 16px;
  color: #333;
}

.form-group {
  margin-bottom: 15px;
}

.label {
  display: block;
  font-size: 14px;
  color: #666;
  margin-bottom: 5px;
}

.picker {
  height: 40px;
  line-height: 40px;
  border: 1px solid #ddd;
  border-radius: 4px;
  padding: 0 10px;
  background-color: #f9f9f9;
}

.input {
  height: 40px;
  border: 1px solid #ddd;
  border-radius: 4px;
  padding: 0 10px;
  width: 100%;
  box-sizing: border-box;
}

.score-input {
  font-size: 18px;
  text-align: center;
  font-weight: bold;
}

.actions {
  margin-top: 30px;
}

.submit-btn {
  width: 100%;
  height: 44px;
}