.container {
  padding: 20px;
  height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.form {
  width: 100%;
  background-color: #fff;
  border-radius: 8px;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
  padding: 20px;
}

.form-title {
  font-size: 18px;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30px;
  color: #333;
}

.form-group {
  margin-bottom: 20px;
}

.label {
  display: block;
  margin-bottom: 8px;
  font-size: 15px;
  color: #333;
}

.input {
  width: 100%;
  height: 44px;
  border: 1px solid #ddd;
  border-radius: 4px;
  padding: 0 12px;
  font-size: 16px;
  background-color: #f8f8f8;
}

.input:focus {
  border-color: #007AFF;
  background-color: #fff;
}

.note {
  font-size: 14px;
  color: #666;
  display: block;
  margin-top: 5px;
  text-align: center;
}

.form-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 30px;
}

.btn {
  width: 45%;
  height: 44px;
  line-height: 44px;
  font-size: 16px;
  border-radius: 4px;
}

.cancel {
  background-color: #f2f2f2;
  color: #333;
}

.save {
  background-color: #007AFF;
}

.player-count-info {
  background-color: #f8f9fa;
  padding: 12px;
  border-radius: 6px;
  margin-bottom: 20px;
  text-align: center;
}

.count-text {
  font-size: 16px;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 4px;
}

.count-hint {
  font-size: 14px;
  color: #666;
}

.ready-message {
  margin-top: 30px;
  padding: 15px;
  background-color: #d4edda;
  border: 1px solid #c3e6cb;
  border-radius: 6px;
  text-align: center;
}

.ready-btn {
  margin-top: 10px;
  width: 100%;
}

/* Add these styles for the gender selector */
.gender-selector {
  width: 100%;
}

.gender-picker {
  height: 40px;
  line-height: 40px;
  border: 1px solid #ddd;
  border-radius: 4px;
  padding: 0 10px;
  background-color: #f9f9f9;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.female {
  background-color: #fff0f5; /* Light pink background for female */
  border-color: #ffb6c1;
}

.male {
  background-color: #f0f8ff; /* Light blue background for male */
  border-color: #add8e6;
}

.picker-arrow {
  border-top: 6px solid #999;
  border-left: 6px solid transparent;
  border-right: 6px solid transparent;
  width: 0;
  height: 0;
}