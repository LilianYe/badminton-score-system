.container {
  padding: 20px;
  background: #f7f8fa;
  min-height: 100vh;
}
.loading, .empty {
  text-align: center;
  color: #888;
  margin-top: 40px;
}
.match-card {
  background: #fff;
  border-radius: 12px;
  box-shadow: 0 4px 16px rgba(0,0,0,0.07);
  margin-bottom: 22px;
  padding: 18px 20px 14px 20px;
  transition: box-shadow 0.2s;
  border-left: 4px solid #007AFF;
}
.match-header {
  font-size: 17px;
  font-weight: 600;
  color: #222;
  margin-bottom: 10px;
  display: flex;
  align-items: center;
}
.players {
  flex: 1;
  display: flex;
  align-items: center;
}
.vs {
  color: #888;
  margin: 0 8px;
  font-weight: bold;
}
.score-row {
  display: flex;
  align-items: center;
  margin-bottom: 6px;
}
.score-label {
  color: #888;
  font-size: 14px;
  margin-right: 8px;
}
.score-value {
  font-size: 20px;
  font-weight: bold;
  color: #007AFF;
}
.meta-row {
  display: flex;
  justify-content: space-between;
  color: #666;
  font-size: 14px;
  margin-bottom: 4px;
}
.court, .ref {
  flex: 1;
}
.time-row {
  color: #aaa;
  font-size: 13px;
  margin-top: 2px;
}
.start-time {
  font-style: italic;
}
.edit-row {
  margin-top: 10px;
  text-align: right;
}
.edit-btn {
  background: #fffbe6;
  color: #ff9500;
  border-radius: 5px;
  border: 1px solid #ffe58f;
  font-size: 13px;
  padding: 0 12px;
  margin-bottom: 2px;
}
.edit-form {
  margin-top: 10px;
  background: #f8f8f8;
  border-radius: 6px;
  padding: 10px 10px 8px 10px;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}
.edit-inputs {
  display: flex;
  align-items: center;
  margin-bottom: 8px;
}
.score-input {
  width: 60px;
  height: 32px;
  border: 1px solid #ddd;
  border-radius: 4px;
  font-size: 16px;
  padding: 0 8px;
  margin: 0 4px;
  background: #fff;
}
.edit-vs {
  font-size: 18px;
  color: #888;
  margin: 0 6px;
}
.save-btn {
  background: #007AFF;
  color: #fff;
  border-radius: 4px;
  margin-right: 8px;
  font-size: 14px;
  padding: 0 16px;
}
.cancel-btn {
  background: #f5f5f5;
  color: #888;
  border-radius: 4px;
  font-size: 14px;
  padding: 0 16px;
} 