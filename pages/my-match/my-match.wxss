page {
  background-color: #f4f4f4;
}

.container {
  padding: 0;
  min-height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

/* Loading container that keeps the title at the top */
.loading-container {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.loading-indicator {
  color: #888;
  font-size: 28rpx;
}

.empty {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  min-height: 60vh;
  color: #888;
  font-size: 28rpx;
}

/* Game title styling - matches header-section in other pages */
.game-title {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 30rpx;
  font-size: 34rpx;
  font-weight: bold;
  color: white;
  text-align: center;
  z-index: 10;
}

/* Round section styling */
.rounds-container {
  padding: 20rpx;
}

.round-section {
  margin-bottom: 30rpx;
}

.round-header {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #eee;
}

/* Courts container */
.courts-container {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* Court card styling */
.court-card {
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  padding: 24rpx;
  margin-bottom: 0;
}

.court-header {
  font-size: 28rpx;
  font-weight: bold;
  color: #555;
  margin-bottom: 10rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

/* Match teams styling */
.match-teams {
  display: flex;
  flex-direction: column;
  padding: 10rpx 0;
}

/* Gender-specific player colors */
.male-player {
  color: #0000F5 !important;
}

.female-player {
  color: #EA33F7 !important;
}

/* Action buttons */
.actions {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
  padding: 0 20rpx 40rpx 20rpx;
}

.back-btn,
.regenerate-btn {
  flex: 1;
  margin: 0 10rpx;
  padding: 22rpx 0;
  text-align: center;
  border-radius: 10rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #fff;
  border: none;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
}

.back-btn {
  background: linear-gradient(135deg, #5cc2f0 0%, #4a90e2 100%);
}

.regenerate-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.back-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.1);
}

/* Disabled button styles */
.disabled-btn {
  background: linear-gradient(135deg, #c7c7c7 0%, #a9a9a9 100%) !important;
  opacity: 0.7;
  cursor: not-allowed;
}

.disabled-btn:active {
  transform: none !important;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15) !important;
}

/* Match list and card styling - now unified with my-profile */
.match-list {
  padding: 0 20rpx;
}

.match-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.match-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.match-time {
  font-size: 24rpx;
  color: #888;
}

.match-round {
  font-size: 24rpx;
  color: #666;
  margin: 0 10rpx;
}

.match-status {
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #fff;
  background-color: #ff9800;
  font-weight: bold;
}

/* Teams container styling - remove the top border to have only one line */
.teams-container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee; /* Keep only bottom border */
}

.team {
  display: flex;
  flex-direction: column;
  flex: 1;
  align-items: center; /* Center the player rows */
}

.player-row {
  display: flex;
  align-items: center;
  justify-content: center; /* Center the player name and icon together */
  margin-bottom: 8rpx;
}

/* Player name styles */
.player-name {
  font-size: 28rpx;
  text-align: center;
}

.gender-icon-small {
  width: 16rpx;
  height: 16rpx;
  margin-left: 8rpx;
}

.score {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin: 0 20rpx;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-shrink: 0; /* Prevent score from shrinking */
}

/* Centered vs indicator styling */
.center-vs {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  min-width: 120rpx; /* Ensure consistent width */
}

.vs-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #777;
}

/* Match footer */
.match-footer {
  padding-top: 20rpx;
  display: flex;
  flex-direction: column;
}

.meta-row {
  display: flex;
  margin-bottom: 16rpx;
}

.court {
  font-size: 24rpx;
  color: #666;
}

.edit-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  padding: 16rpx 0;
  border-radius: 8rpx;
  font-size: 28rpx;
  width: 100%;
  text-align: center;
}

/* Edit form */
.edit-form {
  background-color: #f9f9f9;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-top: 16rpx;
}

.edit-inputs {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}

.score-input {
  width: 100rpx;
  height: 80rpx;
  background-color: white;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  text-align: center;
  font-size: 36rpx;
}

.edit-vs {
  margin: 0 20rpx;
  font-size: 36rpx;
  font-weight: bold;
  color: #666;
}

.edit-actions {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
}

.save-btn, 
.cancel-btn {
  min-width: 150rpx;
}

.save-btn {
  background: #007AFF;
  color: white;
}

.cancel-btn {
  background: #f1f1f1;
  color: #666;
}

/* Gender specific team colors for the courts view */
.team-a .player {
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  font-size: 28rpx;
}

.team-b .player {
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  font-size: 28rpx;
}

.vs-indicator {
  text-align: center;
  font-weight: bold;
  color: #777;
  margin: 10rpx 0;
}

