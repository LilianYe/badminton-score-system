page {
  background-color: #f4f4f4;
}

.container {
  padding: 0;
  min-height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

/* New loading container that keeps the title at the top */
.loading-container {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.loading-indicator {
  color: #888;
  font-size: 28rpx;
}

.loading {
  display: none; /* Hide the old loading element */
}

.empty {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  min-height: 60vh;
  color: #888;
  font-size: 28rpx;
}

/* Game title styling - now matches header-section in other pages */
.game-title {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 30rpx;
  font-size: 34rpx;
  font-weight: bold;
  color: white;
  text-align: center;
  z-index: 10; /* Ensure title stays on top */
}

/* Round section styling */
.rounds-container {
  padding: 20rpx;
}

.round-section {
  margin-bottom: 30rpx;
}

.round-header {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
  padding-bottom: 15rpx;
  border-bottom: 1rpx solid #eee;
}

/* Courts container */
.courts-container {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* Court card styling - consistent with card styles in other pages */
.court-card {
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  padding: 24rpx;
  margin-bottom: 0;
}

.court-header {
  font-size: 28rpx;
  font-weight: bold;
  color: #555;
  margin-bottom: 10rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

/* Match teams styling */
.match-teams {
  display: flex;
  flex-direction: column;
  padding: 10rpx 0;
}

.team {
  display: flex;
  flex-direction: row;
  justify-content: center;
  gap: 20rpx;
  margin: 10rpx 0;
}

.player {
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
  font-size: 28rpx;
}

.team-a .player {
  background-color: #e3f2fd;
  color: #0d47a1;
}

.team-b .player {
  background-color: #fff3e0;
  color: #e65100;
}

.vs-indicator {
  text-align: center;
  font-weight: bold;
  color: #777;
  margin: 10rpx 0;
}

/* Action buttons - consistent with button styling in other pages */
.actions {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
  padding: 0 20rpx 40rpx 20rpx;
}

.back-btn,
.regenerate-btn {
  flex: 1;
  margin: 0 10rpx;
  padding: 22rpx 0;
  text-align: center;
  border-radius: 10rpx;
  font-size: 30rpx;
  font-weight: bold;
  color: #fff;
  border: none;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
}

.back-btn {
  background: linear-gradient(135deg, #8e8e8e 0%, #6e6e6e 100%);
}

.regenerate-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

/* Add hover effect */
.back-btn:active,
.regenerate-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.1);
}

/* Match card for attention matches - consistent with match-card in my-profile */
.match-card {
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  padding: 24rpx;
  margin: 20rpx;
  margin-bottom: 20rpx;
}

.match-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.players {
  flex: 1;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.vs {
  color: #888;
  margin: 0 8rpx;
  font-weight: normal;
}

.score-row {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.score-label {
  color: #888;
  font-size: 26rpx;
  margin-right: 10rpx;
}

.score-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #007aff;
}

.meta-row {
  display: flex;
  justify-content: flex-start;
  color: #666;
  font-size: 26rpx;
  margin-bottom: 10rpx;
}

.court {
  /* No need for flex: 1 since it's the only element */
}

.time-row {
  color: #999;
  font-size: 24rpx;
  margin-top: 10rpx;
}

.start-time {
  font-style: italic;
}

.edit-row {
  margin-top: 15rpx;
  text-align: right;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 15rpx;
}

.edit-btn {
  background: linear-gradient(135deg, #ffac30 0%, #ff9500 100%);
  color: white;
  border-radius: 30rpx;
  font-size: 26rpx;
  padding: 8rpx 24rpx;
  border: none;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.edit-form {
  margin-top: 15rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 20rpx;
}

.edit-inputs {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 15rpx;
}

.score-input {
  width: 80rpx;
  height: 60rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 32rpx;
  padding: 0 10rpx;
  text-align: center;
}

.edit-vs {
  font-size: 32rpx;
  color: #888;
  margin: 0 10rpx;
  font-weight: bold;
}

.save-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 30rpx;
  margin-right: 15rpx;
  font-size: 26rpx;
  padding: 8rpx 24rpx;
  border: none;
}

.cancel-btn {
  background: linear-gradient(135deg, #8e8e8e 0%, #6e6e6e 100%);
  color: #fff;
  border-radius: 30rpx;
  font-size: 26rpx;
  padding: 8rpx 24rpx;
  border: none;
}