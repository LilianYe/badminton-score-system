page {
  background-color: #f7f7f7;
}

.container {
  padding: 24rpx;
  padding-bottom: 160rpx; /* Space for bottom buttons */
}

/* Game List Styles */
.game-list {
  margin-top: 20rpx;
}

.game-list-item {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.2s ease;
}

.game-list-item-hover {
  background-color: #f9f9f9;
  transform: translateY(-2rpx);
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.08);
}

.game-list-title {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
  color: #333;
}

.game-list-info {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.game-list-info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.game-list-status {
  font-size: 24rpx;
  color: #007AFF;
  background-color: rgba(0, 122, 255, 0.1);
  padding: 4rpx 16rpx;
  border-radius: 12rpx;
}

.game-list-players {
  font-size: 24rpx;
  color: #07C160;
}

.game-list-arrow {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #999;
  font-size: 32rpx;
}

.add-game-btn {
  color: #07C160;
  font-size: 28rpx;
}

/* Empty State */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 100rpx;
}

.empty-state image {
  width: 120rpx;
  height: 120rpx;
  opacity: 0.5;
  margin-bottom: 24rpx;
}

.empty-state-text {
  font-size: 28rpx;
  color: #999;
}

/* Game Card Styles */
.game-card {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  position: relative;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.status-badge {
  position: absolute;
  top: 0;
  right: 0;
  background-color: #f2f2f2;
  color: #999;
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 0 16rpx 0 16rpx;
}

.game-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #f2f2f2;
}

.game-title {
  font-size: 36rpx;
  font-weight: bold;
}

.game-icon image {
  width: 48rpx;
  height: 48rpx;
}

.info-row {
  display: flex;
  margin-bottom: 20rpx;
  align-items: center;
  flex-wrap: wrap;
}

.info-icon {
  width: 48rpx;
  height: 48rpx;
  background-color: #f8f8f8;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
}

.info-content {
  flex: 1;
  min-width: 200rpx;
  font-size: 28rpx;
  color: #333;
}

.info-action {
  width: 40rpx;
  display: flex;
  justify-content: flex-end;
  color: #999;
}

/* Player Signup Section */
.section {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
}

.section-action {
  font-size: 28rpx;
  color: #007AFF;
}

.player-grid {
  display: flex;
  flex-wrap: wrap;
}

.player-item {
  width: 25%;
  text-align: center;
  margin-bottom: 30rpx;
  position: relative;
}

.player-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
  border-radius: 50%;
  overflow: hidden;
  background-color: #f2f2f2;
}

.player-avatar image {
  width: 100%;
  height: 100%;
}

.player-name {
  font-size: 24rpx;
  margin-top: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 0 10rpx;
}

.player-remove {
  position: absolute;
  top: -10rpx;
  right: 30rpx;
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  background-color: #ff4d4f;
  color: white;
  font-size: 28rpx;
  line-height: 34rpx;
  text-align: center;
}

.add-player {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.add-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 2rpx dashed #ccc;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: #999;
}

.add-text {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #999;
}

/* Modal */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: white;
  border-radius: 24rpx 24rpx 0 0;
  padding: 30rpx;
}

.game-modal {
  max-height: 80vh;
  overflow: hidden;
}

.modal-header {
  font-size: 32rpx;
  text-align: center;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.modal-body input {
  border: 1px solid #ddd;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.modal-body textarea {
  border: 1px solid #ddd;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  width: 100%;
  height: 120rpx;
}

.gender-selector {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.gender-selector text {
  margin-right: 20rpx;
}

.gender-selector radio-group {
  display: flex;
}

.gender-selector label {
  margin-right: 30rpx;
}

.modal-actions {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.modal-actions button {
  flex: 1;
  margin: 0 10rpx;
}

/* Form Elements */
.form-group {
  margin-bottom: 20rpx;
}

.form-group label {
  display: block;
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color: #666;
}

.picker {
  padding: 20rpx;
  border: 1px solid #ddd;
  border-radius: 8rpx;
}

.placeholder {
  color: #999;
}

/* Bottom Action Buttons */
.action-buttons {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  padding: 20rpx;
  background-color: white;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.action-button {
  flex: 1;
  margin: 0 10rpx;
  font-size: 30rpx;
}

.action-button.share {
  background-color: #f8f8f8;
  color: #333;
}

.action-button.primary {
  background-color: #07C160;
  color: white;
}

.player-avatar {
  position: relative;
}

/* Gender indicator badge */
.player-avatar::after {
  content: '';
  position: absolute;
  bottom: 0;
  right: 10rpx;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #2c88ff; /* Blue for male */
  border: 2rpx solid white;
}

/* Female player indicator */
.female-indicator .player-avatar::after {
  background-color: #ff4f9c; /* Pink for female */
}

/* Loading effect */
@keyframes pulse {
  0% { opacity: 1; }
  50% { opacity: 0.5; }
  100% { opacity: 1; }
}

.isNavigating {
  animation: pulse 1s infinite;
}
