page {
  background-color: #f4f4f4;
}

.container {
  padding: 0;
  min-height: 100vh;
}

/* Header Section (similar to profile-section in my-profile) */
.header-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: white;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: white;
}

.header-action {
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 30rpx;
  padding: 10rpx 20rpx;
}

.add-game-btn {
  color: white;
  font-size: 28rpx;
}

/* Filter Navigation (similar to tab-navigation in my-profile) */
.filter-navigation {
  background-color: white;
  display: flex;
  border-bottom: 1rpx solid #eee;
}

.filter-item {
  flex: 1;
  padding: 30rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  position: relative;
  transition: all 0.3s ease;
}

.filter-item.active {
  color: #007AFF;
  font-weight: bold;
}

.filter-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background-color: #007AFF;
  border-radius: 3rpx;
}

/* Content Section (similar to content-section in my-profile) */
.content-section {
  padding: 20rpx;
}

.game-list {
  max-height: calc(100vh - 200rpx);
}

/* Empty Container (similar to empty-container in my-profile) */
.empty-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 60vh;
  color: #888;
  font-size: 28rpx;
}

.empty-container image {
  width: 120rpx;
  height: 120rpx;
  opacity: 0.5;
  margin-bottom: 24rpx;
}

.empty-state-text {
  font-size: 28rpx;
  color: #999;
}

/* Game Card (styled more like the match-card in my-profile) */
.game-card {
  background-color: white;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  transition: all 0.2s ease;
}

.game-card-hover {
  background-color: #f9f9f9;
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.12);
}

.game-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.game-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.game-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
  color: white;
}

.game-status.active {
  background-color: #07C160;
}

.game-status.completed {
  background-color: #999999;
}

/* Game Info Rows */
.game-info-row {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.game-info-icon {
  width: 40rpx;
  height: 40rpx;
  background-color: #f0f0f0;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #666;
  margin-right: 10rpx;
}

.game-info-text {
  font-size: 26rpx;
  color: #333;
}

.game-footer {
  display: flex;
  justify-content: space-between;
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.game-players, .game-courts {
  font-size: 24rpx;
  color: #666;
}

/* Modal Styles (keep existing modal styles) */
.modal {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 999;
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-mask {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  width: 85%;
  background-color: white;
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
  z-index: 1000;
}

.modal-header {
  padding: 24rpx;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-body {
  padding: 24rpx;
}

.game-modal {
  max-height: 80vh;
}

/* Form Styles */
.form-group {
  margin-bottom: 24rpx;
}

.form-group label {
  display: block;
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color: #333;
}

.form-group input,
.form-group textarea,
.form-group .picker {
  width: 100%;
  padding: 16rpx;
  box-sizing: border-box;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.form-group textarea {
  height: 180rpx;
}

.form-group .placeholder {
  color: #999;
}

.modal-actions {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
  margin: 0 -24rpx -24rpx;
}

.modal-actions button {
  flex: 1;
  border-radius: 0;
  font-size: 32rpx;
}

.modal-actions button::after {
  border: none;
}

/* Player Signup Section */
.section {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
}

.section-action {
  font-size: 28rpx;
  color: #007AFF;
}

.player-grid {
  display: flex;
  flex-wrap: wrap;
}

.player-item {
  width: 25%;
  text-align: center;
  margin-bottom: 30rpx;
  position: relative;
}

.player-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
  border-radius: 50%;
  overflow: hidden;
  background-color: #f2f2f2;
}

.player-avatar image {
  width: 100%;
  height: 100%;
}

.player-name {
  font-size: 24rpx;
  margin-top: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 0 10rpx;
}

.player-remove {
  position: absolute;
  top: -10rpx;
  right: 30rpx;
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  background-color: #ff4d4f;
  color: white;
  font-size: 28rpx;
  line-height: 34rpx;
  text-align: center;
}

.add-player {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.add-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 2rpx dashed #ccc;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: #999;
}

.add-text {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #999;
}

/* Loading effect */
@keyframes pulse {
  0% { opacity: 1; }
  50% { opacity: 0.5; }
  100% { opacity: 1; }
}

.isNavigating {
  animation: pulse 1s infinite;
}

/* Gender indicator badge */
.player-avatar::after {
  content: '';
  position: absolute;
  bottom: 0;
  right: 10rpx;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #2c88ff; /* Blue for male */
  border: 2rpx solid white;
}

/* Female player indicator */
.female-indicator .player-avatar::after {
  background-color: #ff4f9c; /* Pink for female */
}
